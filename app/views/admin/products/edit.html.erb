<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Update Product</h2>
      <% if @product.errors.present?%>
        <ul>
          <% @product.errors.each do |error, message|%>
            <li> <%= "#{error.capitalize}  #{message}" %></li>
          <% end %>
        </ul>
      <% end%>
      <div class="form_container">
        <%= render partial: "form", product: @product %>
      </div>
      <br>
      <div class="btn btn-block"><%= link_to "Back", :back %></div>
    </div>
  </div>
</div>