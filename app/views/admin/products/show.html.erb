<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3 product">
      <%= render partial: "products/product" %>
      <div><%= link_to "Back", :back %></div>
      <br><br>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">All Orders</div>
        <table class="table">
          <thead>
            <th>Order no.</th>
            <th>Payment</th>
            <th>Status</th>
          </thead>
          <tbody>
            <% @orders.order(:status).reverse.each do |order| %>
              <tr>
                <td><%= link_to "#{order.id}", admin_order_path(order) %></td>
                <td>S$<%= "%.2f" % order.order_value %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= column_chart @product_sales, colors: ["#e4ee6e", "#666"], xtitle: "Product", ytitle: "Purchases" %>
  </div>
</div>
