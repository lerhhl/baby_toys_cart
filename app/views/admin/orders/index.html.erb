<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">All Orders</div>
        <table class="table">
          <thead>
            <th>User</th>
            <th>Order no.</th>
            <th>Payment</th>
            <th>Status</th>
          </thead>
          <tbody>
            <% @orders.order(:status).reverse.each do |order| %>
              <tr>
                <td><%= link_to order.user.first_name, user_orders_path(order.user.id) %></td>
                <td><%= link_to "#{order.id}", admin_order_path(order) %></td>
                <td>S$<%= order.order_value %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to "Home", root_path %>
    </div>
  </div>
</div>
