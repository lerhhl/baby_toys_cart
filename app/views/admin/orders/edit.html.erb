<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Order List</div>
        <table class="table">
          <thead>
            <th>Name of product</th>
            <th>Price/unit</th>
            <th>Quantity</th>
            <th>Subtotal</th>
          </thead>
          <tbody>
            <% @ordered_products.each do |ordered_item| %>
              <% @product = Product.find(ordered_item.product_id) %>
              <% @product_value = (@product.price * ordered_item.purchase_quantity) %>                
              <tr>
                <td><%= @product.name %></td>
                <td>S$<%= @product.price %></td>
                <td><%= ordered_item.purchase_quantity %></td>
                <td>S$<%= @product_value %></td>
              </tr>
            <% end %>
          </tbody> 
          <tfoot>
            <tr>
              <td colspan="1"></td><td colspan="2">Grandtotal:</td><td>S$<%= @order_value %></td>
            </tr>
          </tfoot>      
        </table>
      </div>
      <%= form_for [:admin, @order] do |f| %>
        <table>
          <tr>
            <td><strong>Old status:</strong></td>
            <td><%= @order.status %></td>
          </tr>
          <tr>
            <td><%= f.label "New status:" %></td>
            <td><%= f.select :status, ["waiting for payment", "payment received", "shipped", "cancelled"] %></td>
          </tr>
          <tr>
            <td><%= f.submit "Update order status", class:"btn btn-primary" %></td>
            <td><%= link_to "Cancel", :back, class:"btn btn-primary" %></td>
          </tr>
        </table>
      <% end %>
      <br>
    </div>
  </div>
</div> 