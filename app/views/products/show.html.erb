<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3 product">
      <%= render partial: "product" %>
        <%= form_for [:my_cart, @cartlist] do |f| %>
          <table>
              <tr>
                <td><%= f.label :purchase_quantity %></td>
                <td><%= f.select :purchase_quantity, ['1','2','3','4'] %></td>
                <td><%= f.hidden_field :product_id, value: @product.id %></td>
              </tr>
          </table>
          <%= f.submit "Add to Cart" %>
        <% end %>
        <br>
        <%= link_to "Back", products_path %>
        <br><br>
    </div>
  </div>
</div>
